<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_view_margin"
    android:elevation="@dimen/card_view_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/lv_row_padding"
        >

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/lv_row_icon_width"
            android:layout_height="@dimen/lv_row_icon_width"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="@string/string_content_description"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/lv_row_icon_width"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/kk"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/lv_row_text_size"
                android:textColor="@android:color/black"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="@string/app_name"
                />

            <TextView
                android:id="@+id/baby_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/lv_row_text_size"
                android:textColor="@android:color/black"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="@string/app_name"
                />

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/lv_row_text_size"
                android:textColor="@android:color/black"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="@string/app_name"
                />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>